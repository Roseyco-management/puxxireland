# This is an example of your .env file format
# Note: this must be .env, not .env.local, without further configuration changes.

# Database Configuration
# Get this from Supabase Dashboard -> Settings -> Database -> Connection string (URI)
POSTGRES_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Supabase Configuration
# Get these from Supabase Dashboard -> Settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Worldpay Configuration (Week 4 - Payment Processing)
# Get these from Worldpay Dashboard
WORLDPAY_MERCHANT_CODE=***
WORLDPAY_INSTALLATION_ID=***
WORLDPAY_SECRET_KEY=***
WORLDPAY_TEST_MODE=true

# Legacy Stripe (from boilerplate - not used for PUXX)
STRIPE_SECRET_KEY=sk_test_***
STRIPE_WEBHOOK_SECRET=whsec_***

# Application Configuration
# BASE_URL is used server-side (API routes, generateMetadata)
BASE_URL=http://localhost:3000
# NEXT_PUBLIC_BASE_URL is used client-side (SEO components)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Production site URL
NEXT_PUBLIC_SITE_URL=https://puxx.ie

# Authentication Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=***

# Email Configuration (Week 3 - Contact Form)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_***
# Email address to receive contact form submissions
ADMIN_EMAIL=admin@puxx.ie

# Google Analytics 4 (Week 5 - SEO & Analytics)
# Get this from GA4 Dashboard -> Admin -> Data Streams -> Your Stream -> Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Meta (Facebook) Pixel & Conversions API (Week 5 - Marketing & Retargeting)
# Get Pixel ID from: Meta Events Manager -> Data Sources -> Your Pixel
NEXT_PUBLIC_META_PIXEL_ID=YOUR_PIXEL_ID_HERE
# Get Access Token from: Meta Events Manager -> Settings -> Conversions API -> Generate Access Token
META_CAPI_ACCESS_TOKEN=YOUR_ACCESS_TOKEN_HERE

# Microsoft Clarity (Session Recordings & Heatmaps)
# Get this from: https://clarity.microsoft.com/ -> Settings -> Setup -> Project ID
NEXT_PUBLIC_CLARITY_ID=ukkxxvicpd